<!-- Header -->
<header>
    <div class="container">
      <div class="row">
        <%= image_tag("Logo_vertical_blanc.png", class: "logo-header", alt: "Logo Jitips") %>
        <h1>Recommendez un produit à votre communauté pour l'acheter ensemble à un meilleur prix.</h1>
        <h2>Vous voulez en savoir plus ?</h2>

        <div class="row contact">
          <div class="col-md-6">
            <h3>Contactez nous</h3>
            <div class="contact-email">team@jitips.com</div>
          </div>
          <div class="col-md-6">
            <h3>Inscrivez vous à notre Newsletter</h3>

